<%- include('partials/header') %>

<main>
    <section class="py-3">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h1 class="my-3">
                        <%= cityName %>
                    </h1>
                    <hr class="mb-5">
                </div>
            </div>
            <!-- WyÅ›wietlanie informacji o danym filmie -->
            <% movies.forEach(function(item){%>
            <div class="row">
                <div class="col-md-3">
                    <img src="img/<%= item.image %>" alt="" class="img-fluid w-100">
                </div>
                <div class="col-md-9">
                    <div class="row">
                        <div class="col-md-3">
                            <h3 class="my-2"><%= item.movieName %></h3>
                            <p><%= item.duration %></p>
                            <p><%= item.type %></p>
                        </div>
                        <div class="col-md-9">
                            <p class="text-justify">
                                <%= item.description %>
                            </p>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-3">
                            <h5>Wybierz seans:</h5>
                        </div>
                        <div class="col-md-9">
                            <nav class="nav">
                                <% item.hours.forEach(function(hour){%>
                                <a class="nav-link" href="../sala/<%= cityName %>/<%= item.movieName%>"><%= hour %></a>
                                <%  }) %>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
            <hr>
            <%  }) %>
        </div>
    </section>
</main>



<%- include('partials/footer') %>